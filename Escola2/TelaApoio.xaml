<Window x:Class="Escola2.TelaApoio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Escola2"
        mc:Ignorable="d"
        Title="TelaApoio" Height="303" Width="297">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="92,57,0,0" TextWrapping="Wrap" Text="{Binding NomeCompleto}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="92,120,0,0" TextWrapping="Wrap" Text="{Binding CodAluno}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="92,181,0,0" TextWrapping="Wrap" Text="{Binding Serie}" VerticalAlignment="Top" Width="120"/>
        <Button Content="Salvar" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Click="btnSalvar" Width="43"/>
        <Label Content="Nome" HorizontalAlignment="Center" Margin="0,31,0,0" VerticalAlignment="Top"/>
        <Label Content="Código" HorizontalAlignment="Left" Margin="133,94,0,0" VerticalAlignment="Top"/>
        <Label Content="Série" HorizontalAlignment="Left" Margin="133,155,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
